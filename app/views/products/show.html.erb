<% product = @ret[:current] %>

<p>id: <%= product['id'] %></p>
<p>name: <%= product['name'] %></p>
<p>multiplier: <%= product['multiplier'] %></p>
<p>href: <%= product['href'] %></p>
<p>attributes:</p>
<ul>
<% product['attributes'].each do |attribute| %>
  <li><%= attribute['name'] %>: <%= attribute['value'] %></li>
<% end %>
</ul>

<%= button_to "download certificate", product_certificate_path(cur_id_helper), :method => :get, :class => "btn btn-primary" %>
<p/>
<%= button_to "delete this product", current_path(cur_id_helper), :method => :delete, :class => "btn btn-danger" %>
