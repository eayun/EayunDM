<h2>Include operation to role: <%= cur_display_helper %></h2>

<%= form_tag current_path(cur_id_helper), :method => :put do %>
<%= label_tag "Operation name: " %>
<%= select_tag :operation_id, options_for_select(@ret[:extra][:operations].collect {|operation| [operation.name, operation.id]}) %>
<%= submit_tag 'Include this operation' %>
<% end %>
