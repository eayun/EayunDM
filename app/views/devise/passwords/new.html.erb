<html class="login-pf">
  <body>
    <span id="badge">
      <%= image_tag("eayunlogo.png", :alt => "Eayun logo") %>
    </span>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div>
            <%= image_tag("eayunDMtheme.png", :alt => "EayunDMtheme") %>
          </div>
        </div>
        <div class="col-sm-7 col-md-6 col-lg-5 login">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class:'form-horizontal' }) do |f| %>
          <div class="form-group">
            <%= f.label :email, class:'col-sm-2 control-md-2 control-label'%>
            <div class="col-sm-10 col-md-10">
              <%= f.email_field :email, autofocus: true, id:'inputUsername', class:"form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-8 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-6">
              <span class="help-block">
                <%= render "devise/shared/links" %>
              </span>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 submit">
              <%= f.submit "Reset password", id:"mySubmit", class:"btn btn-primary btn-lg" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
