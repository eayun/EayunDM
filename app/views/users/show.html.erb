<h2>User detail</h2>
<%= @user.email %>

<h3>Permissions:</h3>
<ul>
<% @permissions.each do |permission| %>
  <li>
  <%= Role.find(permission.role_id).name %>
  <%= permission.resource_id %>
  <%= link_to 'Delete', :controller => 'users', :action => :destroy_permission, :id => @user.id, :permission_id => permission.id %>
  </li>
<% end %>
<p><%= link_to 'Add permission', :controller => 'users', :action => :new_permission, :id => @user.id %></p>
</ul>

<p><%= link_to 'Back to index', users_path %></p>
